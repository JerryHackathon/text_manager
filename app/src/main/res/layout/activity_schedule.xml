<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp"

    tools:context="com.example.brafinney.myapplication.activities.ScheduleActivity">

    <ImageView android:src="@drawable/lover"
        android:layout_width="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/logo"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:text="Schedule Messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:layout_margin="20dp"
        android:id="@+id/textViewNew" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:hint="Phone Number:"
            android:layout_marginLeft="10dp"
            android:id="@+id/etHerPhoneNumber"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textSize="8pt"
            android:id="@+id/tvSelectContacts"
            android:layout_gravity="bottom"
            android:textColor="#fff"
            android:text="Select Contact"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        android:ems="10"
        android:hint="Message Here: "
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:id="@+id/etHerMessage"
        android:layout_marginTop="30dp"
        />

    <Spinner
        android:id="@+id/spinnerSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginBottom="20dp"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCard3"
        card_view:cardBackgroundColor="@color/colorAccentThree"

        android:layout_below="@+id/tlpassword"

        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="2dp"


        card_view:cardElevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"

            android:id="@+id/btnScheduleMessagesTwo"
            android:textColor="#FFF"
            android:textSize="18dp"

            android:text="Schedule Text"
            android:gravity="center_vertical|center_horizontal" />
    </android.support.v7.widget.CardView>

</LinearLayout>
